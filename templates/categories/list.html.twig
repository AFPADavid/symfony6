        <section class="row">
            <div class="col-12">
                <h1>Liste des produits de la cat√©gorie {{category.name}}</h1>
            </div>
            {% for product in produitDeLaliste  %}
                <div class="col-3">
                    <div class="card-body h-100 mb-3">
